{
  "compilerOptions": {
    "outDir": "dist/js", //pasta de arquivos onde serão colocados os arquvivos transformados em JS
    "target": "ES6",
    "noEmitOnError": true, // Não irá gerar um arquivo JS caso tenha um erro de compilação
     "noImplicitAny": true //Não irá aceitar a tipagem ANY para as variáveis
  },
  "include": ["app/**/*"] //vai pegar todos os arquivos da pasta app para transformar em Javascript
}